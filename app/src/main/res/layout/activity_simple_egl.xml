<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".simple.SimpleEGLActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/preview_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerInside"></ImageView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_init"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_setfilter"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:text="init"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_setfilter"
        app:layout_constraintLeft_toRightOf="@+id/btn_init"
        app:layout_constraintRight_toLeftOf="@+id/btn_release"
        app:layout_constraintTop_toTopOf="@+id/btn_init"
        android:text="Filter"></Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_release"
        app:layout_constraintLeft_toRightOf="@+id/btn_setfilter"
        app:layout_constraintTop_toTopOf="@+id/btn_init"
        app:layout_constraintRight_toRightOf="parent"
        android:text="RELEASE"></Button>



</androidx.constraintlayout.widget.ConstraintLayout>